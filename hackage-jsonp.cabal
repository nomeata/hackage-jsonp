name:             hackage-jsonp
version:          0.0.0
license:          MIT
license-file:     LICENSE
copyright:        (c) 2012 Simon Hengel
author:           Simon Hengel <sol@typeful.net>
maintainer:       Simon Hengel <sol@typeful.net>
build-type:       Simple
cabal-version:    >= 1.8

executable hackage-jsonp
  ghc-options:
      -Wall -Werror
  hs-source-dirs:
      src
  main-is:
      Main.hs
  build-depends:
      base
    , old-time
    , containers
    , bytestring
    , transformers
    , aeson
    , conduit
    , http-conduit
    , http-types

test-suite spec
  type:
      exitcode-stdio-1.0
  ghc-options:
      -Wall -Werror
  hs-source-dirs:
      src, test
  main-is:
      Spec.hs
  build-depends:
      base
    , old-time
    , containers
    , bytestring
    , transformers
    , aeson
    , conduit
    , http-conduit
    , http-types

    -- test suite specific
    , stringbuilder
    , hspec-shouldbe
    , hspec-discover
